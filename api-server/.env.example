# Environment Configuration for Land Registry API Server

# Server Configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# Hyperledger Fabric Configuration
FABRIC_NETWORK_NAME=land-main-channel
FABRIC_CHAINCODE_NAME=land-registry-contract
FABRIC_MSP_ID=OrgRegistrationMSP
FABRIC_ORG_NAME=OrgRegistration

# Fabric Connection Paths (adjust based on your setup)
FABRIC_CONNECTION_PROFILE=../network/connection-profiles/connection-orgregistration.json
FABRIC_WALLET_PATH=./wallet
FABRIC_IDENTITY_NAME=registrar1

# Certificate Paths
FABRIC_CERT_PATH=../organizations/peerOrganizations/registration.landregistry.gov.in/users/Admin@registration.landregistry.gov.in/msp/signcerts/cert.pem
FABRIC_KEY_PATH=../organizations/peerOrganizations/registration.landregistry.gov.in/users/Admin@registration.landregistry.gov.in/msp/keystore/priv_sk
FABRIC_TLS_CERT_PATH=../organizations/peerOrganizations/registration.landregistry.gov.in/peers/peer0.registration.landregistry.gov.in/tls/ca.crt

# Peer Configuration
PEER_ENDPOINT=localhost:9051
PEER_HOST_ALIAS=peer0.registration.landregistry.gov.in

# Orderer Configuration
ORDERER_ENDPOINT=localhost:7050
ORDERER_HOST_ALIAS=orderer0.orderer.landregistry.gov.in
ORDERER_TLS_CERT_PATH=../organizations/ordererOrganizations/orderer.landregistry.gov.in/orderers/orderer0.orderer.landregistry.gov.in/tls/ca.crt

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=30m
JWT_REFRESH_EXPIRY=7d

# PostgreSQL Database (for indexing/search)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=land_registry_index
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# External Service APIs
DIGILOCKER_API_URL=https://api.digitallocker.gov.in/v1
DIGILOCKER_CLIENT_ID=your-digilocker-client-id
DIGILOCKER_CLIENT_SECRET=your-digilocker-client-secret

AADHAAR_KYC_API_URL=https://stage1.uidai.gov.in/onlineekyc
AADHAAR_CLIENT_ID=your-aadhaar-client-id
AADHAAR_CLIENT_SECRET=your-aadhaar-client-secret

BIOMETRIC_VERIFY_API_URL=https://biometric-api.gov.in/v1/verify
BIOMETRIC_API_KEY=your-biometric-api-key

# SMS/Email Notification
NOTIFICATION_SERVICE_URL=https://sms.gov.in/api
NOTIFICATION_API_KEY=your-notification-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads

# API Documentation
SWAGGER_ENABLED=true
